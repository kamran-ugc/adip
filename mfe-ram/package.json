{
  "name": "ram-app",
  "version": "0.0.1",
  "scripts": {
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "eslint \"src/**/*.{ts,js,html}\" --max-warnings=0",
    "lint:fix": "eslint \"src/**/*.{ts,js,html}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,css,scss,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,css,scss,html}\"",
    "type-check": "tsc --noEmit",
    "check-branch-name": "chmod 755 .husky/hooks/check_branch_naming.sh && sh .husky/hooks/check_branch_naming.sh"
  },
  "private": true,
  "dependencies": {
    "@angular-architects/module-federation": "^18.0.6",
    "@angular/animations": "^19.2.0",
    "@angular/cdk": "^18.2.12",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/material": "^18.2.12",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/platform-server": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@angular/ssr": "^19.2.0",
    "express": "^4.18.2",
    "host-app": "^0.1.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.0",
    "@angular/cli": "^19.2.0",
    "@angular/compiler-cli": "^19.2.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ngx-build-plus": "^19.0.0",
    "nx": "20.4.6",
    "typescript": "~5.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^5.1.4",
    "angular-eslint": "19.4.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript-eslint": "8.32.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js,html,css,scss,json}": [
      "prettier --check",
      "eslint --max-warnings=0",
      "tsc --noEmit"
    ]
  }
}
